{
  "compilerOptions": {
    // Use ESM
    "module": "NodeNext",
    "moduleResolution": "nodenext",

    // We handle these with ESLint:
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    // DX
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "tsBuildInfoFile": "node_modules/.cache/.tsbuildinfo",
    "noErrorTruncation": true,
    "skipLibCheck": true,
  },
  "include": ["src"],
  "exclude": ["dist"]
}